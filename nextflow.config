docker.enabled = true
docker.runOptions='-u $(id -u):$(id -g)'

// note that the nanopore option does not allow cutadapt and / or pear
params {
    reads = "$projectDir/fastq/*_R{1,2}*.fastq.gz"
    outdir = "$projectDir/results"
    temp_dir = "$projectDir/results/tmp_dir"
    metadata = false
    cpus = 64
    classifier = "$projectDir/assets/SILVA.OUT.classifier.qza"
    root_taxon = "domain - Bacteria"
    run_pear = "yes" // only applicable for single end mode with paired reads
    nanopore = "no" // only applicable for single end mode with single reads
    niceness = 16
    seq_read = "paired" // 'single' or 'paired' mode
    fwd_primer = "GTGYCAGCMGCCGCGGTAA" 
    rev_primer = "GGACTACNVGGGTWTCTAAT"
    
}

executor {
  $docker {
      queueSize= 12
  }
  $local {
      cpus = params.cpus
      queueSize= 12
  }
}

profiles {
   test { includeConfig 'assets/TEST.config' }
}