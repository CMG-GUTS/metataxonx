params {
    singleEnd = false
    input = null
    reads = null
    outdir = "."

    // QIIME2 classifiers
    classifier = "${projectDir}/assets/SILVA.OUT.classifier.qza"

    // Common primer and adapter sequences
    standard_adapters = "$projectDir/assets/adapters.fasta"
    standard_primers = "$projectDir/assets/primers.fasta"
    custom_primer_1 = null
    custom_primer_2 = null
    custom_adapter_1 = null
    custom_adapter_2 = null

    batch_size = 500
    read_sample_size = 100000
    novaseq = false
    root_taxon = "domain - Bacteria"

    // Process bypass options
	bypass_trim 					=	false

	// File saving options
    save_trim_reads                 =   false
    save_multiqc_reports            =   false
    save_sampled_reads              =   false
    save_merged_reads               =   false

    save_denoise_stats              =   false
    save_denoise_sequences          =   false
    save_denoise_table              =   false

    save_biom_files                 =   false
    save_tree_files                 =   false
    save_alpha_div_files            =   false
    save_beta_div_files             =   false
    save_qiime_artifacts            =   false

    save_biotaviz_files             =   false
    save_sankey_plot                =   false
    save_final_report               =   false

    validate_params = true // Not yet functional
    version = false
    help = false
    monochrome_logs = false

    email =	null
    email_on_fail =	null
    plaintext_email = false
    hook_url = null

    process_low_cpu = 4
    process_med_cpu = 8
    process_high_cpu = 16
    cpus = 32
}

// Load nf-pipeline-setup
includeConfig './conf/modules.config'

// Load base.config by default for all pipelines
includeConfig './conf/base.config'

plugins {
  id 'nf-schema@2.0.0'
}

manifest {
    name            = 'metataxonomics'
    author          = """Alem Gusinac, Tom Ederveen, Jos Boekhorst, Annemarie Boleij"""
    homePage        = ''
    description     = """16S metagenomics workflow for Microbiomics"""
    mainScript      = 'main.nf'
    nextflowVersion = '!>=24.10.4'
    version         = '2.0'
}

executor {
  $local {
      queueSize = params.cpus.intdiv(params.process_low_cpu)
	  cpus = params.cpus
  }
}

mail {
	smtp.host = 'smtp.umcn.nl'
	smtp.port = 25
}

profiles {
    docker {
        docker.enabled          = true
        docker.runOptions       = '-u $(id -u):$(id -g) --rm --security-opt=no-new-privileges'
        singularity.enabled     = false
        }
    singularity {
        singularity.enabled     = true
        singularity.ociAutoPull = false
        docker.enabled          = false
        }
	test { 
		includeConfig 'conf/test.config'     
	}
}