docker.enabled = true
docker.runOptions='-u $(id -u):$(id -g)'

// note that the nanopore option does not allow cutadapt and / or pear
params {
    reads = "$baseDir/fastq/*_R{1,2}*.fastq.gz"
    outdir = "$baseDir/results"
    temp_dir = "$baseDir/results/tmp_dir"
    metadata = false
    cpus = 64
    classifier = "$baseDir/assets/silva_v138_16S_classifier.qza"
    root_taxon = "domain - Bacteria"
    run_pear = "yes"
    nanopore = "no"
    niceness = 16
    fwd_primer = "GTGYCAGCMGCCGCGGTAA" 
    rev_primer = "GGACTACNVGGGTWTCTAAT"
}

executor {
  $docker {
      queueSize= 12
  }
  $local {
      cpus = params.cpus
      queueSize= 12
  }
}

profiles {
   test { includeConfig 'assets/TEST.config' }
}